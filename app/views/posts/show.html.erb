<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<div class='post'>
  <div class='title'>
    <%= @post.title %>
  </div>
  <div class='content'>
    <%=raw @post.content %>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post), class:'btn btn-default' %>
<%= link_to 'Back', posts_path, class:'btn btn-default' %>
