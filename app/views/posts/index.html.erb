<h1>Listing posts</h1>

<table class='table table-bordered table-hover table-striped' style='margin-top:2em'>
  <thead>
    <tr>
      <th class='span8'>Title</th>
      <th colspan='3'>Data Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class:'btn btn-default' %>
<%= link_to 'Home', root_path, class:'btn btn-default' %>
